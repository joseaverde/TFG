with "config/seizure_detector_fixed_simulator_config.gpr";
project Seizure_Detector_Fixed_Simulator is

   for Source_Dirs use ("src/", "config/");
   for Object_Dir use "obj/" & Seizure_Detector_Fixed_Simulator_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("seizure_detector_fixed_simulator.adb");

   package Compiler is
      for Default_Switches ("Ada") use Seizure_Detector_Fixed_Simulator_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Seizure_Detector_Fixed_Simulator;
